<div class="card-extended__header">
  <% unless @github_session.organizations.empty? %>
    <dropdown class="select">
      <div class="select__btn" slot="btn">
        <img src="<%= @github_organization[:avatar_url] %>">
        <span class="select__title"><%= @github_organization[:login].capitalize %></span>
      </div>
      <div class="select__body" slot="body">
        <div class="select-body__title"><%= t('messages.dashboard.organizations') %></div>
        <% @github_session.organizations.each do |org| %>
          <%= link_to organization_path(name: org[:login]), class: 'select__option' do %>
              <%= image_tag(org[:avatar_url]) %> <%= org[:login] %>
          <% end %>
        <% end %>
      </div>
    </dropdown>

    <% unless only_organization %>
      <dropdown class="select">
        <div class="select__btn" slot="btn">
          <%= octicon "jersey" %>
          <span class="select__title"><%= @team ? @team[:name] : @github_organization[:login].capitalize %></span>
        </div>
        <div class="select__body" slot="body">
          <div class="select-body__title"><%= t('messages.dashboard.teams') %></div>
          <%= link_to @github_organization[:login].capitalize, organization_path(name: @github_organization[:login], month_limit: @corrmat.limit), class: 'select__option' %>

          <% @teams.each do |team| %>
            <% if team[:froggo_team] %>
              <%= link_to organization_path(name: @github_organization[:login], team: team[:name], month_limit: @corrmat.limit, froggo_team: team[:froggo_team]), class: 'select__option' do %>
                  <%= team[:name] %>
              <% end %>
            <% else %>
              <%= link_to organization_path(name: @github_organization[:login], team: team[:slug], month_limit: @corrmat.limit, froggo_team: team[:froggo_team]), class: 'select__option' do %>
                <%= team[:name] %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </dropdown>

      <dropdown class="select">
        <div class="select__btn" slot="btn">
          <%= octicon "calendar" %>
          <span class="select__title"><%= t('messages.dashboard.month', count: @corrmat.limit) %></span>
        </div>
        <div class="select__body" slot="body">
          <div class="select-body__title"><%= t('messages.dashboard.since') %></div>
          <% timespans.each do |limit| %>
            <%= link_to organization_path(name: @github_organization[:login], team: (@team[:slug] if @team), month_limit: limit), class: 'select__option' do %>
                <%= t('messages.dashboard.month', count: limit) %>
            <% end %>
          <% end %>
        </div>
      </dropdown>
    <% end %>
  <% end %>
  <div class="button" style="margin-top:15px; margin-left:5px;">
    <%= link_to "Por Defecto", :controller => 'organizations', :action => 'default_cookies', month_selected: @corrmat.limit, team_selected: (@team[:id] if @team) %>
  </div>
  <% if @has_dashboard %>
    <dashboard-syncing-icon id="<%= @organization.id %>"></dashboard-syncing-icon>
  <% end %>
  <div class="card-extended__config">
    <% if @is_admin && !only_organization%>
      <a class="button" href="<%= settings_organization_path(@github_organization[:login]) %>">
        <%= t('messages.dashboard.settings') %>
      </a>
    <% end %>
    <a class="button" href="<%= public_organization_path(name: @github_organization[:login]) %>">
      <%= t('messages.dashboard.public.title') %>
    </a>
  </div>
</div>
